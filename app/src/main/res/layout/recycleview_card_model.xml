 <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardCornerRadius="@dimen/cardview_default_elevation"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        android:padding="@dimen/cardview_compat_inset_shadow">
            <ImageView
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_holder"
                android:contentDescription="@string/descp_posterimage"/>
            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:contentDescription="@string/descp_fav_icon"/>
 </android.support.v7.widget.CardView>

